{
  "name": "t3n-react",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/parser": "^1.5.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "lerna": "^3.10.7",
    "prettier": "^1.16.1",
    "typescript": "^3.3.3"
  },
  "scripts": {
    "clean": "lerna clean --yes && rm -rf node_modules && rm -rf packages/t3n-components/build && rm -rf packages/t3n-storybook/storybook-static",
    "prepare": "lerna clean --yes && lerna bootstrap --hoist",
    "start:components": "lerna run start --scope @t3n/components --stream",
    "build:components": "lerna run build --scope @t3n/components --stream",
    "start:storybook": "lerna run storybook --scope @t3n/storybook --stream",
    "build:storybook": "lerna run build-storybook --scope @t3n/storybook --stream",
    "serve:storybook": "npx http-server packages/t3n-storybook/storybook-static"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "plugin:@typescript-eslint/recommended",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "react/jsx-filename-extension": 0
    }
  }
}
