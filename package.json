{
  "name": "t3n-react",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint-config-xo-react": "^0.18.0",
    "eslint-plugin-react": "^7.12.4",
    "lerna": "^3.10.7",
    "prettier": "^1.16.1",
    "xo": "^0.24.0"
  },
  "scripts": {
    "clean": "./node_modules/.bin/lerna clean --yes && rm -rf node_modules && rm -rf packages/t3n-components/build && rm -rf packages/t3n-storybook/storybook-static",
    "prepare": "./node_modules/.bin/lerna clean --yes && ./node_modules/.bin/lerna bootstrap",
    "test": "xo",
    "start:components": "./node_modules/.bin/lerna run start --scope @t3n/components --stream",
    "build:components": "./node_modules/.bin/lerna run build --scope @t3n/components --stream",
    "start:storybook": "./node_modules/.bin/lerna run storybook --scope @t3n/storybook --stream",
    "build:storybook": "./node_modules/.bin/lerna run build-storybook --scope @t3n/storybook --stream",
    "serve:storybook": "npx http-server packages/t3n-storybook/storybook-static"
  },
  "prettier": {
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": true
  },
  "xo": {
    "extends": "xo-react",
    "prettier": true,
    "rules": {
      "unicorn/filename-case": 0
    }
  }
}
