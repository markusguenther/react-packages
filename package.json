{
  "name": "t3n-react",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "awesome-typescript-loader": "^5.2.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "lerna": "^3.10.7",
    "prettier": "^1.16.1",
    "typescript": "^3.5.0-dev.20190413"
  },
  "scripts": {
    "clean": "lerna clean --yes && rm -rf node_modules && rm -rf packages/t3n-components/dist && rm -rf packages/t3n-styles/dist && rm -rf packages/t3n-storybook/storybook-static",
    "prepare": "lerna clean --yes && lerna bootstrap --hoist",
    "start:components": "lerna run start --scope @t3n/components --stream",
    "build:components": "lerna run build --scope @t3n/components --stream",
    "start:styles": "lerna run start --scope @t3n/styles --stream",
    "build:styles": "lerna run build --scope @t3n/styles --stream",
    "start:storybook": "lerna run start --scope @t3n/storybook --stream",
    "build:storybook": "lerna run build --scope @t3n/storybook --stream",
    "serve:storybook": "lerna run serve --scope @t3n/storybook --stream"
  },
  "prettier": {
    "singleQuote": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "airbnb",
      "plugin:jest/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "import/no-extraneous-dependencies": 0,
      "import/prefer-default-export": 0,
      "no-console": 0,
      "no-nested-ternary": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".jsx",
            "tsx"
          ]
        }
      ]
    }
  }
}
