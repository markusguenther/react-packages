{
  "name": "@t3n/components",
  "version": "0.1.0",
  "author": "Philip Plagge <sayhi@itscursedphil.com>",
  "private": true,
  "dependencies": {
    "@t3n/theme": "^0.1.0",
    "clean-tag": "^3.1.1",
    "polished": "^3.1.0",
    "react-imgix": "^8.6.4",
    "styled-components": "^4.3.0",
    "styled-system": "^5.0.21"
  },
  "main": "dist/bundle.js",
  "types": "src/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist && rm -rf .awcache",
    "check-types": "tsc",
    "start": "webpack --watch",
    "build": "NODE_ENV=production webpack",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "devDependencies": {
    "@t3n/configs": "^0.1.0",
    "@testing-library/react": "^9.1.1",
    "@types/jest": "^24.0.17",
    "@types/react": "^16.9.1",
    "@types/react-dom": "^16.8.4",
    "@types/styled-components": "^4.1.16",
    "@types/styled-system": "^5.0.1",
    "babel-jest": "^24.5.0",
    "jest": "^24.5.0",
    "jest-dom": "^4.0.0",
    "jsdom": "^15.1.1",
    "jsdom-global": "^3.0.2",
    "react": "^16.9.0",
    "react-test-renderer": "^16.9.0",
    "ts-jest": "^24.0.1",
    "typescript": "^3.5.3"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "styled-components": ">=4"
  },
  "jest": {
    "displayName": "components",
    "coverageDirectory": "coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx"
    ],
    "testEnvironment": "node",
    "testRegex": [
      "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "setupFiles": [
      "<rootDir>/setupFile.js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": {
          "jsx": "react"
        }
      }
    }
  }
}
